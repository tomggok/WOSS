#pragma mark -获取user里的usertype
-(NSString *)getUsertype:(int)type
{
    switch (type) {
        case 0:
            return @"学生";
        case 1:
            return @"辅导员";
        case 2:
            return @"领导";
        case 3:
            return @"施政老师";
        default:
            break;
    }
    return @"";
}

